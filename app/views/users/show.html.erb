<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<h3>Articles</h3>
<%= link_to 'New Article', new_article_path %>
<table>
  <thead>
  <tr>
    <th>Title</th>
  </tr>
  </thead>
  <tbody>
  <% @user.articles.each do |article| %>
    <tr>
      <td><%=link_to article.title, article%></td>
    </tr>
  <% end %>

  </tbody>
</table>